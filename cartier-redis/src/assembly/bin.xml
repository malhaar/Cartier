<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
        <format>zip</format>
        <format>dir</format>
    </formats>
    <baseDirectory>${project.artifactId}-${project.version}-bin</baseDirectory>
    <includeSiteDirectory>false</includeSiteDirectory>
    <dependencySets>
        <dependencySet>
            <includes>
                <include>biz.paluch.redis:lettuce:jar:${project.version}</include>
                <include>biz.paluch.redis:lettuce:jar:shaded:${project.version}</include>
            </includes>
            <outputDirectory></outputDirectory>
            <unpack>false</unpack>
            <useProjectArtifact>true</useProjectArtifact>
            <useProjectAttachments>true</useProjectAttachments>
        </dependencySet>
        <dependencySet>
            <scope>provided</scope>
            <outputDirectory>dependencies</outputDirectory>
            <unpack>false</unpack>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>io.reactivex:*</include>
                <include>io.netty:*</include>
                <include>com.google.guava:*</include>
                <include>org.apache.commons:*</include>
                <include>org.latencyutils:*</include>
                <include>org.hdrhistogram:*</include>
            </includes>
            <outputDirectory>dependencies</outputDirectory>
            <unpack>false</unpack>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>biz.paluch.redis:lettuce:*:javadoc</include>
            </includes>
            <outputDirectory>apidocs</outputDirectory>
            <unpack>true</unpack>
            <useProjectArtifact>false</useProjectArtifact>
            <useProjectAttachments>true</useProjectAttachments>
        </dependencySet>
    </dependencySets>

    <fileSets>
        <fileSet>
            <includes>
                <include>LICENSE</include>
                <include>README.md</include>
                <include>RELEASE-NOTES.md</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>
